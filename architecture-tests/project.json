{
  "name": "architecture-tests",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "architecture-tests/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/architecture-tests",
        "main": "architecture-tests/src/index.ts",
        "tsConfig": "architecture-tests/tsconfig.lib.json",
        "assets": ["architecture-tests/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "architecture-tests/jest.config.ts"
      }
    }
  }
}
